{
  "extends": ["../../../.eslintrc.json"],
  "rules": {
    "no-restricted-imports": [
      "warn",
      {
        "patterns": [
          {
            "group": ["@i18n-weave/core/**"],
            "message": "Util should not import from Core directly."
          },
          {
            "group": ["@i18n-weave/module/**"],
            "message": "Util should not import from Module directly."
          },
          {
            "group": ["@i18n-weave/file-io/**"],
            "message": "Util should not import from FileIO directly."
          },
          {
            "group": ["@i18n-weave/store/**"],
            "message": "Util should not import from Store directly."
          },
          {
            "group": ["@i18n-weave/feature/**"],
            "message": "Util should not import from Feature directly."
          },
          {
            "group": ["@i18n-weave/http/**"],
            "message": "Util should not import from Http directly."
          }
        ]
      }
    ]
  }
}
