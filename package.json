  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "properties": {
        "i18nWeave.enableJsonToPoConversion": {
          "type": "boolean",
          "default": true,
          "description": "Enable Json To Po Conversion"
        }
      }
    }
